/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.vertical-line {
  background-color: rgba(0, 0, 0, 0.1);
  width: 1px;
  margin-left: 15px;
  margin-right: 5px;
}

.horizontal-line {
  width: 100%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.1);
  margin-top: 5px;
  margin-bottom: 5px;
}

.tips {
  position: absolute;
  top: 50%;
  color: #8e8e8e;
  font-size: 12px;
}
